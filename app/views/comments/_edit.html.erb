<%= form_for [room, comment], :html => {:class => "w-100"}, remote: true do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :room_id, value: room.id %>
  <%= f.text_field :content, class: "form-control comment-input border-0", placeholder: "Add a comment...", autocomplete: :off %>
  <div style="margin-top: 10px;">
    <%= f.button :submit, :class => "btn btn-primary" %>
    <%= link_to room_comment_cancel_path(comment.room_id,comment), remote: true do %>
                <button type="button" class="btn btn-danger">
                    Cancel
                </button>
<% end %>
  </div>
<% end %>
