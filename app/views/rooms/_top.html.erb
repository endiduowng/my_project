<% rooms[0,4].each do |room| %>
  <div class="card mb-3">
    <% if room.images.size != 0 %>
      <%= link_to image_tag(room.images[0].url ,class: "card-img-top", width: "240px", height: "180px"), room_path(room) %>
    <% else %>
      <%= link_to image_tag(rooms.first.images[0].url ,class: "card-img-top", width: "240px", height: "180px"), room_path(room) %>
    <% end %>
    <div class="card-body">
      <p class="card-text" style="text-overflow: ellipsis; white-space: nowrap;
              overflow: hidden;"><%= room.title %></p>
    </div>
    <div class="card-footer">
      <small class="text-muted">Last updated 3 mins ago</small>
    </div>
  </div>
<% end %>
